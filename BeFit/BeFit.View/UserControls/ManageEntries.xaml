<UserControl x:Class="BeFit.View.UserControls.ManageEntries"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BeFit.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0" Content="Clients"></Label>
        <ComboBox Grid.Row="0" Grid.Column="1" Margin="5" 
                  ItemsSource="{Binding Clients}" 
                  SelectedValue ="{Binding ClientId, Mode=TwoWay}" 
                  SelectedValuePath="Id"
                  DisplayMemberPath="Id"></ComboBox>
    </Grid>
</UserControl>
